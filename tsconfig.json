{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noEmit": true,
    "composite": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "entrypoints/**/*",
    "utils/**/*",
    "assets/**/*",
    "wxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".wxt",
    "dist"
  ]
}